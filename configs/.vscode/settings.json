{
  "files.watcherExclude": {
    "**/.cache/**": true,
    "storybook-static": true
  },
  "files.exclude": {
    "**/coverage": true,
    "**/coverage-ts": true,
    "**/node_modules": true,
    "**/.next": true,
    "**/storybook-static": true,
    "**/yarn-error.log": true,
    "**/next-env.d.ts": true,
    "**/yarn.lock": true,
    ".babelrc": true,
    ".cz-config.js": true,
    ".eslintignore": true,
    ".gitignore": true,
    ".prettierignore": true,
    ".releaserc.json": true,
    "jest.config.ts": true
  },
  "search.exclude": {
    "**/.next": true,
    "storybook-static": true
  },
  "editor.formatOnSave": false,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "prettier.disableLanguages": ["javascript", "javascriptreact", "typescript", "typescriptreact"]
}
